@model List<WatchStore.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-light breadcrumb-section">
    <div class="container pt-2">
        <div aria-label="breadcrumb ">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cart</li>
            </ol>
        </div>
    </div>
</div>
<div class="container">
    <!--<h3 class="title text-center">Cart Null</h3>-->
    <div class="px-4 px-lg-0">
        <div class="pb-5">
            <div class="container">
                @if (Model == null || Model.Count == 0)
                {
                    <div class="row">
                        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>

                                        <h5 class="alert alert-danger text-center">
                                            Chưa có sản phẩm nào trong giỏ hàng của bạn !!!
                                        </h5>
                                    </tbody>
                                </table>
                            </div>
                            <!-- End -->
                        </div>
                    </div>

                    <div class="row py-5 p-4 bg-white rounded shadow-sm">

                        <div class="col-lg-12">
                            <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary</div>
                            <div class="p-4">
                                <p class="font-italic mb-4">
                                    Shipping and additional costs are calculated based on values you
                                    have entered.
                                </p>
                                <ul class="list-unstyled mb-4">
                                    <li class="d-flex justify-content-between py-3 border-bottom">
                                        <strong class="text-muted">Order Subtotal </strong><strong>$0.00</strong>
                                    </li>
                                    <li class="d-flex justify-content-between py-3 border-bottom">
                                        <strong class="text-muted">Shipping and handling</strong><strong>$0.00</strong>
                                    </li>
                                    <li class="d-flex justify-content-between py-3 border-bottom">
                                        <strong class="text-muted">Quantity Subtotal</strong><strong>$0.00</strong>
                                    </li>
                                    <li class="d-flex justify-content-between py-3 border-bottom">
                                        <strong class="text-muted">Total</strong>
                                        <h5 class="font-weight-bold"><strong>$0.00</strong></h5>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="p-2 px-3 text-uppercase">Product</div>
                                            </th>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="py-2 text-uppercase">Price</div>
                                            </th>
                                            <th scope="col" class="border-0 bg-light">
                                                <div class="py-2 text-uppercase">Quantity</div>
                                            </th>

                                            <th scope="col" class="border-0 bg-light">
                                                <div class="py-2 text-uppercase">Remove</div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row" class="border-0">
                                                    <div class="p-2">
                                                        <img src="~/Content/img/product/@item.Avatar" alt=""
                                                             width="70" class="img-fluid rounded shadow-sm">
                                                        <div class="ml-3 d-inline-block align-middle">
                                                            <h5 class="mb-0">
                                                                <a href="#"
                                                                   class="text-dark d-inline-block align-middle text-decoration-none">
                                                                    @item.Name
                                                                </a>
                                                            </h5><span class="text-muted font-weight-normal font-italic d-block ">Gender: @item.Gender</span>
                                                        </div>
                                                    </div>
                                                </th>
                                                <td class="border-0 align-middle"><strong>$@item.unitPrice</strong></td>
                                                <td class="border-0 align-middle"><strong>@item.quantity</strong></td>
                                                <td class="border-0 align-middle">
                                                    <a href="~/Cart/RemoveProduct?pid=@item.Id" class="text-dark">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- End -->
                        </div>
                    </div>

                    <div class="row py-5 p-4 bg-white rounded shadow-sm">

                        <div class="col-lg-12">
                            <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary</div>
                            <div class="p-4">
                                <p class="font-italic mb-4">
                                    Shipping and additional costs are calculated based on values you
                                    have entered.
                                </p>
                                <ul class="list-unstyled mb-4">
                                   
                                    <li class="d-flex justify-content-between py-3 border-bottom">
                                        <strong class="text-muted">Shipping and handling</strong><strong>$00.00</strong>
                                    </li>
                                    <li class="d-flex justify-content-between py-3 border-bottom">
                                        <strong class="text-muted">Quantity Subtotal</strong><strong>@Model.Sum(m => m.quantity)</strong>
                                    </li>
                                    <li class="d-flex justify-content-between py-3 border-bottom">
                                        <strong class="text-muted">Total</strong>
                                        <h5 class="font-weight-bold"><strong>$@Model.Sum(m => m.intoMoney)</strong></h5>
                                    </li>
                                </ul>
                                <a href="~/Checkout/Index" class="btn btn-checkout rounded-pill py-2 btn-block">Procceed to checkout</a>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>


