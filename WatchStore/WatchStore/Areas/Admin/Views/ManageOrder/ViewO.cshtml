    <!--start modal product add-->
    <div class="container-fluid py-3">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">View Order</h5>
            </div>
            <div class="modal-body ">
                <form>
                    <div class="row mb-5">
                        <div class="col-3">
                            <div class="form-outline">
                                <input type="text" class="form-control" placeholder="Enter Order ID" readonly />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-outline">
                                <input type="text" class="form-control" placeholder="Enter Customer ID" readonly />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-outline">
                                <input type="date" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-outline">
                                <input type="text" class="form-control" placeholder="Enter Status Order" readonly />
                            </div>
                        </div>
                    </div>


                    <div class="form-outline mb-5">
                        <textarea type="text" class="form-control" rows="16" readonly>
                            Load tất cả thông tin order + order detail vào đây
                        </textarea>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

            </div>
        </div>
    </div>

